{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Module + target
    "module": "commonjs",
    "target": "es2020",

    // Node types
    "types": ["node"],

    // Enable modern ES module imports for CommonJS
    "esModuleInterop": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Source maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Style & Module options
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
